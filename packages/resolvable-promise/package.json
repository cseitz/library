{
  "name": "@cseitz/resolvable-promise",
  "version": "0.0.2",
  "description": "A promise that can be resolved or rejected",
  "author": "cseitz",
  "keywords": [],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/cseitz/library.git",
    "directory": "packages/resolvable-promise",
    "homepage": "https://github.com/cseitz/library/tree/main/packages/resolvable-promise"
  },
  "main": "./dist/index.cjs",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "benchmark": "tsc --project tsconfig.benchmark.json",
    "lint": "eslint --cache src",
    "typecheck": "tsc --noEmit --preserveWatchOutput --pretty",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "packageManager": "pnpm@10.29.3",
  "devDependencies": {
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3"
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/__test__",
    "!**/__tests__"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "peerDependencies": {
    "typescript": ">=5.7.2"
  }
}
